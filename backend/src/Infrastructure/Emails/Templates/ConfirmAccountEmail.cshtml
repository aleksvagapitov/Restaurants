@using Infrastructure.Views.Shared
@model Application.Admin.Owners.ConfirmAccountEmailViewModel

@{
    ViewData["EmailTitle"] = "Welcome!";
}

<p>
    We're excited to have you get started. First, you need to confirm your account. Just press the button below.
</p>

@await Html.PartialAsync("~/Emails/Shared/EmailButton.cshtml", new EmailButtonViewModel("Confirm Account", Model.ConfirmEmailUrl))

<p>
    Your password is <mark style="background-color: LightGray"> @Model.Password </mark>
</p>

<p>
    If you have any questions, just reply to this email—we're always happy to help out.
</p>

<br />

<p>
    The Contoso Team
</p>